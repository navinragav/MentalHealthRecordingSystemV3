@model IEnumerable<Web2.Models.SecClass1>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<h2 style="color:darkcyan">Secretary Page</h2>
<p style=" color:darkblue"> Welcome : @ViewBag.user  &emsp;&emsp;&emsp; Role: @ViewBag.role   &emsp;&emsp;&emsp;&emsp;  @Html.ActionLink("Bill Status", "Index", "BillClass1") &emsp;&emsp;&emsp;&emsp;  @Html.ActionLink("Follows up", "Index", "FollowClass1") &emsp;&emsp;&emsp;&emsp;  @Html.ActionLink("Logout", "signout", "LogClass1") </p>

@using (Html.BeginForm("Index", "SecClass1"))
{
    <p style=" color:forestgreen">
        @Html.Label("Patient Id")
        <input type="text" name="pid" value="@ViewBag.pid" />
        @Html.Label("Patient Name")
        <input type="text" name="pname" value="@ViewBag.pname" />
        &ensp; <input type="submit" style="color:midnightblue" value="Search" />
    </p>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div style="width:800px;">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(model => model.PatientId).Titled("PatientId").Filterable(true).SetWidth(150);
    columns.Add(model => model.pname).Titled("Patient Name").Filterable(true).SetWidth(150);
    columns.Add(model => model.SurName).Titled("SurName").SetWidth(150);
    columns.Add(model => model.Gender).Titled("Gender").SetWidth(150);
    columns.Add(model => model.Appointment).Format("{0:dd/MM/yyyy}").Titled("Appointment Date").SetWidth(150).Format("{0:dd/MM/yyyy}");
    columns.Add(model => model.AppointmentTime).Format("{0:hh:mm}").Titled("Appointment Time").SetWidth(150);
    columns.Add(model => model.ContactNumber).Titled("Contact Number").SetWidth(150);
    columns.Add(model => model.DOB).Format("{0:dd/MM/yyyy}").Titled("DOB").SetWidth(150);
    columns.Add(model => model.Religion).Titled("Religion").SetWidth(150);
    columns.Add(model => model.EthnicOrigin).Titled("EthinicOrigin").SetWidth(150);
    columns.Add(model => model.Maritalstatus).Titled("Marital Status").SetWidth(150);
    columns.Add(model => model.NextOfKin).Titled("NextOfKin").SetWidth(150);
    columns.Add(model => model.MedicalCard).Titled("Medical Card").SetWidth(150);
    columns.Add(model => model.Occupation).Titled("Occupation").SetWidth(150);
    columns.Add(model => model.Address).Titled("Address").SetWidth(150);
    columns.Add(model => model.Gpname).Titled("GP Name").SetWidth(150);
    columns.Add(model => model.Status).Titled("Status").SetWidth(150);



    columns.Add(model => model.pid).Titled("").Sanitized(false).Encoded(false).SetWidth(10)
   .RenderValueAs(model => @Html.ActionLink("Edit", "Edit", new { id = model.pid }));

    columns.Add().Titled("").Sanitized(false).Encoded(false).SetWidth(10)
   .RenderValueAs(model => @Html.ActionLink("Details", "Details", new { id = model.pid }));

    columns.Add().Titled("").Sanitized(false).Encoded(false)
   .RenderValueAs(model => @Html.ActionLink("Delete", "Delete", new { id = model.pid }));

}).WithPaging(4).Sortable(true)
</div>


