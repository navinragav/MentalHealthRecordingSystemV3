@model IEnumerable<Web2.Models.LogClass1>
@using GridMvc.Html

@{
    ViewBag.Title = "Admin Page";
}

<h2 style="color:darkcyan">Admin Page</h2>
<p style=" color:darkblue"> Welcome : @ViewBag.user  &emsp;&emsp;&emsp; Role: @ViewBag.role   &emsp;&emsp;&emsp;&emsp;  @Html.ActionLink("Logout", "signout") </p>

<br />
<div style="font-size:large">
    @Html.ActionLink("Create user", "Create")&emsp;&emsp;&emsp;  @Html.ActionLink("Consultant Details", "Index", "Consultants") &emsp;&emsp;&emsp;&emsp; @Html.ActionLink("Nurse Details", "Index", "Nurses")
</div>
<br />
    <div style="width:800px;">
        @Html.Grid(Model).Columns(columns =>
   {
   columns.Add(model => model.UserName).Titled("User Name").Filterable(true).SetWidth(150);
   columns.Add(model => model.Password).Titled("Password").Filterable(true).SetWidth(150);
   columns.Add(model => model.Confirm_Password).Titled("Confirm Password").SetWidth(150);
   columns.Add(model => model.Role).Titled("Role").SetWidth(100);


   columns.Add(model => model.Id).Titled("").Sanitized(false).Encoded(false).SetWidth(10)
  .RenderValueAs(model => @Html.ActionLink("Edit    |", "Edit", new { id = model.Id }));

   columns.Add().Titled("").Sanitized(false).Encoded(false).SetWidth(10)
  .RenderValueAs(model => @Html.ActionLink("Details |", "Details", new { id = model.Id }));

   columns.Add().Titled("").Sanitized(false).Encoded(false)
  .RenderValueAs(model => @Html.ActionLink("Delete", "Delete", new { id = model.Id }));


   }).WithPaging(4).Sortable(true)
    </div>



